<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="right"
    android:background="#fff"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/zoomable"
        android:text="Zoommabile"
        android:padding="5dp"
        app:switchPadding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/translatable"
        android:text="Traducibile"
        android:padding="5dp"
        app:switchPadding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="48dp"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/restrictBounds"
        android:text="Limita i limiti"
        android:padding="5dp"
        app:switchPadding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="48dp"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/animateOnReset"
        android:text="Animare su Ripristina"
        android:padding="5dp"
        app:switchPadding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="48dp"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/autoCenter"
        android:text="Centro automatico"
        android:padding="5dp"
        app:switchPadding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="48dp"/>

    <TextView
        android:id="@+id/reset"
        android:text="Ripristina"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="48dp"/>

    <TextView
        android:id="@+id/autoReset"
        android:text="ModalitÃ  di ripristino automatico"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="48dp"/>

</LinearLayout>